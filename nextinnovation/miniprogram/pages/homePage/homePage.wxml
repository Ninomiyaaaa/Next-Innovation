<!--miniprogram/pages/homePage/homePage.wxml-->
<view class="page-container">
  <view wx:if="{{!memoList.length}}" class="hint-blank">
    No memo
  </view>
  <view wx:else>
    <view class="memo-item" wx:for="{{memoList}}" wx:key="index" bindlongtap="onLongtap" data-id="{{item._id}}">
      <view class="memo-content">
        <rich-text nodes="{{item.content}}"></rich-text>
      </view>
    </view>
  </view>

  <drawer />
</view>

<!-- <loading /> -->

<button class="btn-add" data-url="/pages/addMemo/addMemo" bindtap="toPage">NEW MEMO</button>