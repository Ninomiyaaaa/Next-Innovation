/* miniprogram/pages/addMemo/addMemo.wxss */

.page-container {
  height: 100%;
}

.form-container {
  padding: 30rpx 30rpx 120rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.placeholder {
  color: #ccc;
}

.title-box {
  border: solid 1px #eee;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  height: 90rpx;
}

.content-box {
  border: solid 1px #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  height: 890rpx;
}

.input {
  display: block;
  line-height: 1.5;
  width: 100%;
  height: 100%;
  font-size: 36rpx;
}

.input.content {
  min-height: 160rpx;
}

.btn-add {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(90deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
  box-shadow: 0 6rpx 17rpx -2rpx rgba(179, 207, 217, 1);
  font-size: 33rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  position: fixed;
  bottom: 0;
  left: 0;
  border-radius: 0;
}
