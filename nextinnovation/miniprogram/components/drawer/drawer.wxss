/* components/drawer/drawer.wxss */

.drawer-overlay {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9;
}

.drawer-container {
  width: 270rpx;
  height: 100%;
  background-color: #fff;
  position: absolute;
  top: 0;
  left: -270rpx;
  z-index: 10;
  transition: left 100ms linear;
}

.drawer-container.show {
  left: 0;
  transition: left 100ms linear;
}

.left-bar {
  position: fixed;
  left: 0;
  top: 0;
  width: 30rpx;
  height: 100%;
}

.avatar-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0;
}

.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.nick-name{
  color: #333;
  font-size: 28rpx;
  margin-top: 30rpx;
}